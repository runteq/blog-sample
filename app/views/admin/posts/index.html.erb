<div class="flex justify-between items-center mb-6">
  <h2 class="text-2xl font-bold text-gray-900">記事一覧</h2>
  <%= link_to "新規投稿", new_admin_post_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition" %>
</div>

<% if @posts.any? %>
  <div class="bg-white rounded-lg shadow-md overflow-hidden">
    <table class="w-full">
      <thead class="bg-gray-50 border-b">
        <tr>
          <th class="text-left px-6 py-3 text-sm font-medium text-gray-700">タイトル</th>
          <th class="text-left px-6 py-3 text-sm font-medium text-gray-700 w-40">投稿日時</th>
          <th class="px-6 py-3 text-sm font-medium text-gray-700 w-32">操作</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @posts.each do |post| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4">
              <%= link_to post.title, post_path(post), class: "text-blue-600 hover:text-blue-800", target: "_blank" %>
            </td>
            <td class="px-6 py-4 text-sm text-gray-600">
              <%= post.published_at&.strftime("%Y/%m/%d %H:%M") %>
            </td>
            <td class="px-6 py-4 text-center">
              <%= link_to "編集", edit_admin_post_path(post), class: "text-blue-600 hover:text-blue-800 text-sm mr-3" %>
              <%= button_to "削除", admin_post_path(post), method: :delete, class: "text-red-600 hover:text-red-800 text-sm cursor-pointer", form: { data: { turbo_confirm: "本当に削除しますか？" } } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="bg-white rounded-lg shadow-md p-8 text-center">
    <p class="text-gray-600 mb-4">まだ記事がありません</p>
    <%= link_to "最初の記事を投稿する", new_admin_post_path, class: "text-blue-600 hover:text-blue-800" %>
  </div>
<% end %>
